{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@App/*": ["src/features/App/*"],
			"@Top/*": ["src/features/Top/*"],
			"@Todo/*": ["src/features/Todo/*"],
			"@Show/*": ["src/features/Todo/Show/*"],
			"@InputArea/*": ["src/features/Todo/InputArea/*"],
			"@Detail/*": ["src/features/Todo/Detail/*"],
			"@Header/*": ["src/features/Header/*"]
		},
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"allowJs": true,
		"incremental": true,
		"esModuleInterop": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["src", ".next/types/**/*.ts"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	],
	"exclude": ["node_modules"]
}
