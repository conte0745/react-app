{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@App/*": ["src/features/App/*"],
			"@Auth/*": ["src/features/Authentication/*"],
			"@Top/*": ["src/features/Top/*"],
			"@Todo/*": ["src/features/Todo/*"],
			"@TodoShow/*": ["src/features/Todo/Show/*"],
			"@TodoCreate/*": ["src/features/Todo/InputArea/*"],
			"@TodoDetail/*": ["src/features/Todo/Detail/*"],
			"@Question/*": ["src/features/Question/*"],
			"@QuestionShow/*": ["src/features/Question/Show/*"],
			"@QuestionCreate/*": ["src/features/Question/InputArea/*"],
			"@QuestionDetail/*": ["src/features/Question/Detail/*"],
			"@Drill/*": ["src/features/Drill/*"],
			"@DrillShow/*": ["src/features/Drill/Show/*"],
			"@DrillDetail/*": ["src/features/Drill/Detail/*"],
			"@Header/*": ["src/features/Header/*"]
		},
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"downlevelIteration": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"allowJs": true,
		"incremental": true,
		"esModuleInterop": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["src", ".next/types/**/*.ts"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	],
	"exclude": ["node_modules", "**/*.test.tsx", "**/*.test.ts"]
}
